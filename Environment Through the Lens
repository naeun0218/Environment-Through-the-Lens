  <script>
    (function(){
      const slides = document.getElementById('slides');
      const menuButtons = Array.from(document.querySelectorAll('nav.menu button'));
      const pagerButtons = Array.from(document.querySelectorAll('.pager button'));
      const prevBtn = document.getElementById('prevBtn');
      const nextBtn = document.getElementById('nextBtn');
      const total = 4;
      let idx = 0;

      function updateUI(){
        // transform slides (각 슬라이드가 가로로 25% 폭이므로 translateX = -idx * 25%)
        slides.style.transform = `translateX(-${idx * 25}%)`;

        menuButtons.forEach(btn => btn.classList.toggle('active', Number(btn.dataset.index) === idx));
        pagerButtons.forEach(btn => btn.classList.toggle('active', Number(btn.dataset.index) === idx));
      }

      // 메뉴 클릭
      menuButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          idx = Number(btn.dataset.index);
          updateUI();
        });
      });
      pagerButtons.forEach(btn => {
        btn.addEventListener('click', () => {
          idx = Number(btn.dataset.index);
          updateUI();
        });
      });

      // 화살표
      prevBtn.addEventListener('click', () => {
        idx = (idx - 1 + total) % total;
        updateUI();
      });
      nextBtn.addEventListener('click', () => {
        idx = (idx + 1) % total;
        updateUI();
      });

      // 키보드(좌우)
      window.addEventListener('keydown', (e) => {
        if(e.key === "ArrowLeft"){ idx = (idx - 1 + total) % total; updateUI(); }
        if(e.key === "ArrowRight"){ idx = (idx + 1) % total; updateUI(); }
      });

      // 터치 스와이프 (간단)
      let startX = null;
      const viewport = document.querySelector('.viewport');
      viewport.addEventListener('touchstart', (e)=> {
        startX = e.touches[0].clientX;
      }, {passive:true});
      viewport.addEventListener('touchend', (e)=> {
        if(startX === null) return;
        const endX = e.changedTouches[0].clientX;
        const diff = startX - endX;
        if(Math.abs(diff) > 40){
          if(diff > 0) { idx = Math.min(total-1, idx+1); }
          else { idx = Math.max(0, idx-1); }
          updateUI();
        }
        startX = null;
      });

      // 초기 세팅
      updateUI();

      // 접근성: focus 이동 시 메뉴 자동 활성화
      menuButtons.forEach(btn => {
        btn.addEventListener('focus', () => {
          idx = Number(btn.dataset.index); updateUI();
        });
      });

      // (선택) URL hash로 특정 섹션 열기: #slide-2 등
      function checkHash(){
        const h = location.hash.replace('#','');
        if(h.startsWith('slide-')){
          const n = Number(h.split('-')[1]);
          if(!isNaN(n) && n>=0 && n<total){ idx = n; updateUI(); }
        }
      }
      window.addEventListener('hashchange', checkHash);
      checkHash();

    })();
  </script>
</body>
</html>
